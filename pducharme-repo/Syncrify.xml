<?xml version="1.0" encoding="utf-8"?>
<Container>
  <Name>Syncrify</Name>
  <Description>
    Syncrify is a private cloud backup software allowing multiple machines to backup folders/files to a central repository within your enterprise.[br]
    [b]/data[/b] : to connect to Unraid mnt/user.[br]
 </Description>
  <Registry>https://registry.hub.docker.com/u/pducharme/syncrify/</Registry>
  <Repository>pducharme/syncrify</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Environment>
  </Environment>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>5800</HostPort>
        <ContainerPort>5800</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/</HostDir>
      <ContainerDir>/data</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Version></Version>
  <WebUI>http://[IP]:[PORT:5800]/</WebUI>
  <Banner>http://i.imgur.com/6IA303B.png</Banner>
  <Icon>http://i.imgur.com/6IA303B.png</Icon>
</Container>


